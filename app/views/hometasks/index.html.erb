<div class="container">
  <div class="row">
    <div class="container">
      <table class="table">
        <h2>Tareas realizadas</h2>
        <thead>
          <tr>
            <th scope="col">Casa</th>
            <th scope="col">Tarea</th>
            <th scope="col">Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% @hometasks.each do |hometask| %>
            <tr>
              <td><%= hometask.home.address %></td>
              <td><%= hometask.task.name %></td>
              <td><%= time_ago_in_words(hometask.created_at) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
